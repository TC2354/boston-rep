<!DOCTYPE html>
<html lang="en">


<%- include('partials/head'); %>


<body>
    <div class="app">
        <%- include('partials/navbar'); %>
        <div class="container">
            <div class="row">
                <div class="col-md-8 m-auto pt-4">
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <% if(Object.keys(showtimes).length> 0) { %>
                                <ul class="nav flex-column">
                                    <% showtimes.forEach(showtime => { %>
                                        <li class="nav-item">
                                            <div class="d-flex justify-content-between py-1">
                                                <div class="d-flex flex-row">
                                                    <div>
                                                        <%= showtime.Title %>
                                                            <p class="text-muted"><small>
                                                                    <%= showtime.Date%>
                                                                </small></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    <div class="text-center"><strong>No Showtimes Found</strong></div>
                                    <% }%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>